{% extends 'shared/base.html.twig' %}
{% set phc = page.header.content %}
{% block content %}

  <div class="section--intro-header section--intro-header--map-animation section--intro-header--raster js-intro-header--map-animation" style="background-image:url({{ theme_url }}/build/images/hero/hero-map-1.jpg);">
    <div class="text-wrapper text-wrapper--lg text-wrapper--lg-padding text--white">
      <h1 class="intro-header--headline">{{ phc.intro.headline }}</h1>
      <h2 class="intro-header--sub-headline cd-headline js-type-headline letters type">
        <span>
          {{ phc.intro.sub_headline_start }}
        </span>
        <span class="cd-words-wrapper">
          <b data-background="{{ theme_url }}/build/images/hero/hero-map-1.jpg" data-animationdelay="{{ phc.intro.animation_duration_long }}" class="is-visible">{{ phc.intro.sub_headline_middle_area_1 }}</b>
          <b data-background="{{ theme_url }}/build/images/hero/hero-map-3.jpg" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_2 }}</b>
          <b data-background="{{ theme_url }}/build/images/hero/hero-map-4.jpg" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_3 }}</b>
          <b data-background="{{ theme_url }}/build/images/hero/hero-map-2.jpg" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_4 }}</b>
        </span>
        <span>
          {{ phc.intro.sub_headline_end }}
        </span>
      </h2>
      <div class="margin-v-sm">
        <a href="{{ phc.intro.button_href }}" class="btn btn--primary btn--orange btn--inline js-scroll-to-section ga-scroll-to-link" data-target="download-app">{{ phc.intro.button_text }}</a>
      </div>
    </div>
    <div class="js-scroll-to-section ga-scroll-to-link" data-target="download-app"><img class="intro-splash-image" src="{{ url('theme://build/images/graphics/phone-mocks.png') }}"></div>
  </div>
  <section class="section section--task-nav margin-v-md">
    <div class="container container--no-grid container--md">
      <h3 class="section-headline text--center">{{ phc.task_nav_headline }}</h3>
      <nav role="navigation">
        <ul class="task-list reset-list">
          {% for link in phc.task_links %}
            <li class="task-list__item">
              <a data-key="{{link.href}}" class="js-highlight task-list__link task-list__link--{{ link.icon }}" href="{{ base_url }}{{ link.href }}">
                {{ link.text }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </section>
  {% for module in page.collection( ) %}
    {{ module.content }}
  {% endfor %}
  <!--  -->
  {{ include('partials/in-the-media.html.twig') }}
  <!--  -->
{% endblock %}
