{% extends 'shared/base.html.twig' %}
{% set phc = page.header.content %}
{% block content %}

  <div class="section--intro-header section--intro-header--map-animation section--intro-header--darken">
    <div class="js-map-backgrounds map-backgrounds">
      <div class="map-background--1 map-background is-visible"></div>
      <div class="map-background--2 map-background"></div>
      <div class="map-background--3 map-background"></div>
      <div class="map-background--4 map-background"></div>
    </div>
    <div class="text-wrapper text-wrapper--lg text-wrapper--lg-padding text--white">
      <h1 class="intro-header--headline">{{ phc.intro.headline }}</h1>
      <h2 class="intro-header--sub-headline cd-headline js-type-headline letters type">
        <span>
          {{ phc.intro.sub_headline_start }}
        </span>
        <span class="cd-words-wrapper">
          <b data-background=".map-background--1" data-animationdelay="{{ phc.intro.animation_duration_long }}" class="is-visible">{{ phc.intro.sub_headline_middle_area_1 }}</b>
          <b data-background=".map-background--2" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_2 }}</b>
          <b data-background=".map-background--3" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_3 }}</b>
          <b data-background=".map-background--4" data-animationdelay="{{ phc.intro.animation_duration }}">{{ phc.intro.sub_headline_middle_area_4 }}</b>
        </span>
        <span>
          {{ phc.intro.sub_headline_end }}
        </span>
      </h2>
      <div class="margin-v-sm intro-header--button-case">
        <a href="{{ phc.intro.button_main_href }}" class="btn btn--orange btn--inline">{{ phc.intro.button_main_text }}</a>
        <br>
        <a href="{{ base_url }}{{ phc.intro.button_secondary_href }}" class="btn btn--white-link btn--inline">{{ phc.intro.button_secondary_text }}</a>
      </div>
    </div>
    <a href="{{ base_url }}{{ phc.intro.button_download_href }}"><img class="intro-splash-image" src="{{ url('theme://build/images/graphics/phone-mocks.png') }}"></a>
  </div>
  <section class="section section--task-nav margin-v-md">
    <div class="container container--no-grid container--md">
      <h3 class="section-headline text--center">{{ phc.task_nav_headline }}</h3>
      <nav role="navigation">
        <ul class="task-list reset-list">
          {% for link in phc.task_links %}
            <li class="task-list__item">
              <a data-key="{{link.href}}" class="js-highlight task-list__link task-list__link--{{ link.icon }}" href="{{ base_url }}{{ link.href }}">
                {{ link.text }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </section>
  {% for module in page.collection( ) %}
    {{ module.content }}
  {% endfor %}
  <!--  -->
  {{ include('partials/in-the-media.html.twig') }}
  <!--  -->
{% endblock %}
