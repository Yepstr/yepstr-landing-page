{% set tcc = config.themes['yepstr-landing-page'].cost_security_info %}
<section class="section section--two-col-promo margin-v-lg">
  <div class="container container--xl container--no-grid">
    <div class="section--two-col-promo--wrapper">
      <div class="promo-col promo-col--left background background--green">
        <div class="promo-col--content text--white">
          <h2 class="promo-col--headline">
            {{ tcc.col_left_headline }}
          </h2>
          <div class="promo-col--text nice-type">
            {{ tcc.col_left_text|markdown }}
          </div>
        </div>
      </div>
      <div class="promo-col promo-col--right background background--lightest-grey">
        <div class="promo-col--content">
          <h2 class="promo-col--headline">
            {{ tcc.col_right_headline }}
          </h2>
          <div class="promo-col--text nice-type">
            {{ tcc.col_right_text }}
          </div>
          <div class="promo-col--image">
            {{ page.find('/images').media['promo-if-iphone.png'] }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
