{% extends 'shared/base.html.twig' %}
{% block content %}
  <div class="section--intro-header background background--yep-hero background--pos-left">
    <div class="text-wrapper text-wrapper--lg text-wrapper--lg-padding text--white">
      <h1 class="intro-header--headline">{{ page.title }}</h1>
    </div>
  </div>
  <section class="section margin-v-md">
    <div class="container container--no-grid container--lg margin-v-sm">
      <h2 class="section-headline text--center">{{ page.header.headline }}</h2>
    </div>
    <div class="container container--no-grid container--sm margin-v-sm">
      <div class="nice-type">
        <p>
          {{ page.content }}
        </p>
      </div>
    </div>
  </section>
  {% for module in page.collection( ) %}
    {{ module.content }}
  {% endfor %}
{% endblock %}
