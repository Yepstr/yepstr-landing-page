{% set home_page = page.find( '/home' ) %}

<section class="section section--task-nav margin-v-md">
  <div class="container container--no-grid container--md">
    <nav role="navigation">
      <ul class="task-list reset-list">
        {% for link in home_page.header.content.task_links %}
          <li class="task-list__item">
            <a data-key="{{ base_url }}{{link.href}}" class="js-highlight task-list__link task-list__link--{{ link.icon }}" href="{{ base_url }}{{ link.href }}">
              {{ link.text }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</section>
